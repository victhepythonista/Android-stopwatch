
<Button>:
    #font_name : './data/Typo_Round_Bold_Demo.otf'
    backgrounddown:''
    backgroundnormal:''
    bold : True
    font_size : 50
<ControlButton>:
    color:0,0,0,1
    background_color : 0,.44,.5,0
    canvas.before :
        Color:
            rgba:0,.44,.5,1
        RoundedRectangle:
            size : self.size
            pos : self.pos
# ~~~~~~~~~~~~~ LABELS  ~~~~~~~~~~~~~~~~~~~~~
<Label>:
    markup : True
    font_name : './data/Typo_Round_Bold_Demo.otf'
    canvas.before:
        Color:
            rgba:0,0,0,0
        Rectangle:
            size : self.size
            pos : self.pos
<AppTitle>:
    size_hint:1,.1
    pos_hint:{'x':0,'y':.85}
    color :  0,.654,.5,1
    text : " <         stopwatch         >"
    font_size: 60
<TimerLabel>:
    size_hint:1,.5
    pos_hint:{'x':0,'y':.3}
    text:'  start '
    font_size:160
    color : 1,1,1,1
    #texture_size : self. size
    canvas.before:
        Color:
            rgba:.1,.1,.12,1
        RoundedRectangle:
            radius : [   (30,30),(20,40), (30,30), (30,30),   ]
            size : self.size
            pos : self.pos


# | CONTAINERS | #
#~~~~~~~~~~~~~~~~#
<HomeScreenContainer>:
    size_hint:1,1
    pos_hint:{'x':0,'y':0}

    AppTitle:
    TimerLabel:
        id  : timerlabel
    BoxLayout:
        size_hint:1,.15
        pos_hint:{'x':0,'y':.05}
        orientation : 'horizontal'
        padding:5
        spacing:5

        ControlButton:
            text:'START'
            on_press:
                timerlabel.Start()
        ControlButton:
            text: 'PAUSE'
            id:pause_btn
            on_press:
                timerlabel.PauseOrResume()
                self.text = 'RESUME' if (self.text == 'PAUSE' and timerlabel.stopped == False) else 'PAUSE'
                
        ControlButton:
            text: 'STOP'
            on_press:
                timerlabel.Stop()
                pause_btn. text = "PAUSE"


RootWidget:
    HomeScreen:
        id: homescreen
        name : 'homescreen'
        HomeScreenContainer
            id:homescreencontainer
